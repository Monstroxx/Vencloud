# Vencloud Configuration
# Host and Port
HOST=0.0.0.0
PORT=8080

# Redis Configuration
REDIS_URI=redis:6379

# Root redirect URL (where users go after authentication)
ROOT_REDIRECT=https://vencord.dev

# Discord OAuth Configuration
# You need to create a Discord Application at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://your-domain.com/auth/callback

# Security - Generate random strings for these
PEPPER_SETTINGS=your_random_pepper_settings_here
PEPPER_SECRETS=your_random_pepper_secrets_here

# Size limit for settings (in bytes, default: 1MB)
SIZE_LIMIT=1048576

# Allowed users (comma-separated Discord user IDs, leave empty for all users)
ALLOWED_USERS=

# Proxy header (if behind a reverse proxy)
PROXY_HEADER=X-Forwarded-For

# Prometheus metrics (true/false)
PROMETHEUS=false
